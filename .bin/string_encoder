#! /usr/bin/env ruby
# Replaces invalid utf-8 characters with ï¿½.
#
# Usage:
# $ cat some_file | string_encoder

while input = gets
  input = input.to_s.force_encoding('UTF-8')
  if input.valid_encoding?
    puts input
  else
    puts input.encode('UTF-8', 'binary', invalid: :replace, undef: :replace)
  end
end
